@model authServer.Models.RoleInputModel
@{
    ViewData["Title"] = "Edit Role";
}
<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">Roles</a></li>
        <li class="breadcrumb-item"><a asp-action="View" asp-route-id="@ViewBag.Role.Id">@Model.Name</a></li>
        <li class="breadcrumb-item active me-auto">Edit</li>
        <li>
            <a asp-action="Delete" asp-route-id="@ViewBag.Role.Id" class="btn btn-outline-danger btn-sm">
                <i class="bi bi-trash-fill"></i>
            </a>
        </li>
    </ol>
</nav>

<div class="row g-2">
    <div class="col-lg-12">
        <div class="card h-100">
            <div class="card-header">Basic Info</div>
            <div class="card-body">
                <form method="post">
                    <div class="form-floating mb-3">
                        <input asp-for="Name" class="form-control" placeholder="Name" required>
                        <label asp-for="Name"></label>
                    </div>
                    <div class="form-floating mb-3">
                        <textarea asp-for="Description" class="form-control" placeholder="Description" style="height: 100px"></textarea>
                        <label asp-for="Description"></label>
                    </div>
                    <a class="btn btn-outline-secondary me-2" asp-action="View" asp-route-id="@ViewBag.Role.Id"><i class="bi bi-x-lg"></i></a>
                    <button type="submit" class="btn btn-outline-primary"><i class="bi bi-check-lg"></i></button>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </form>
            </div>
        </div>
    </div>

</div>
