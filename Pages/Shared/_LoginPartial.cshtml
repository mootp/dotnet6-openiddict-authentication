@using Microsoft.AspNetCore.Identity
@using authServer.Entities

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="index" class="nav-link text-dark" href="~/index">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <a id="logout" class="nav-link text-dark" href="~/connect/logout">Logout</a>
    </li>
}
else
{
    <li class="nav-item">
        <a id="login" class="nav-link text-dark" href="~/account/login">Login</a>
    </li>
}
</ul>
